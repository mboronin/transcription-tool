<!doctype html>

<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="/public/style.css">
  <script type="text/javascript" src="ckeditor.js"></script>
  <title>Transcribe</title>
</head>


<body>
  <!--container for the webpage -->
  <div class="container-fluid">
    <!-- creates the row of the header -->
    <div class="row header">
      <div class="col-12">
        <h1>Transcribe</h1>
        <p>For transcribing audio files</p>
      </div>
    </div>

    <!-- creates the row containing the tools for the audio player -->
    <div class="row tools
      <div id=" audio-controls">
      <div class="form-inline">

        <!-- the form for uploading the audio files -->
        <form method="POST" action="/upload" enctype="multipart/form-data">
          <%= typeof msg != 'undefined' ? msg : '' %>

          <input type="file" class="btn-light form-control-sm" name="files" id="exampleFormControlFile1" />

          <input data-val-regex-pattern="^(https?://)?([\da-z\.-]+)\.([a-z\.]{2,6})([/\w\.-=?&amp;_]*)*/?$"
            data-val="true" data-val-regex="Enter a valid web adress" id="Documents_0__Link" name="Documents[0].Link"
            type="text" value="" placeholder="Paste URL here" class="btn-light form-control-sm">

          <button type="submit" class="btn btn-light rounded-pill"><img src="public/images/Upload_1.png"
              width="30"></img></button>
        </form>

        <!-- input to enter how many seconds the loop function should run -->
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Number of seconds to loop: </span>
          </div>
          <input class="form-control" size="1" type="text" id="loopy" value="5" />
        </div>

        <!-- buttons to start and stop the loop function -->
        <button class="btn btn-light rounded-pill" onclick="loop_select()"><img src="public/images/Loop_1.png"
            width="30"></img></button>
        <button class="btn btn-light rounded-pill" onclick="loop_end()"><img src="public/images/Loop_4.png"
            width="30"></img></button>

        <!-- dropdown list to change the playback speed -->
        <div class="dropdown">
          <button class="btn btn-light dropdown-toggle rounded-pill" type="button" id="dropdownMenuButton"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Playback speed
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <option value="half" onclick="speed_half()"> 0,5x</option>
            <option value="normal" onclick="speed_normal()">1x</option>
            <option value="oneandhalf" onclick="speed_onehalf()"> 1.5x</option>
            <option value="two" onclick="speed_two()"> 2x</option>
          </div>
        </div>

        <!-- button for creating a timestamp -->
        <button type="submit" class="btn btn-light rounded-pill"><img src="public/images/timestamp_2.svg"
            width="30"></img></button>
      </div>

      <!-- scripts for running the functionalities above -->
      <script>
        // Keyboard shortcut for starting and stopping the looping
        document.addEventListener("keyup", startloopKb, false);

        function startloopKb(event) {
          var x = event.keyCode;
          if (x === 67 && event.altKey || x === 99 && event.altKey) {
            loop_select();

          } else if (x === 70 && event.altKey || x === 102 && event.altKey) {
            loop_end();
          }
        }

        // Changing the playback speed -->
        speed_half = function () {
          audio.playbackRate = 0.5;
        }
        speed_normal = function () {
          audio.playbackRate = 1;
        }
        speed_onehalf = function () {
          audio.playbackRate = 1.5;
        }
        speed_two = function () {
          audio.playbackRate = 2;
        }

        // Play the selected file from the playlist -->
        function selectSong() {
          songs = document.getElementsByName('song');
          for (i = 0; i < songs.length; i++) {
            if (songs[i].checked) {
              name = document.getElementsByName('song')[i].value;
            }
          }
          name = "./public/uploads/" + name;
          document.getElementById("songselector").setAttribute("src", name);
          var x = document.getElementById("songselector");
          audio.load();
          audio.play();
        }

        // Get the selected time to loop and start -->
        loop_select = function () {
          clearInterval(inter);
          var dur = document.getElementById("audio");
          var loopy_value = document.getElementById('loopy').value
          var loopy_int = loopy_value * 1000;

          var a = dur.currentTime;
          var b = a - loopy.value;
          audio.currentTime = b;
          inter = setInterval(function () {
            audio.currentTime = b;
          }, loopy_int)
        }

        // End the loop -->
        loop_end = function () {
          clearInterval(inter);
        }
      </script>
      <hr />
    </div>


    <div class="row" style="width:100%">

      <div class="col-sm-3">

        <div id="audio-player">

          <% if(files){ %>

          <ul class="list-group">
            <div class="form-group row">
              <fieldset class="form-group">
                <div class="row">

                  <div class="form-check">
                    <% files.forEach(function(file) { %>
                      
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      <div>
                      <input type="radio" name="song" id="<%=file%>" value="<%=file%>" onclick="selectSong()"></div>
                      <div>
                      <label class="text" class="col-sm-2">
                        <%=file%>
                      </label></div>
                  <div class="float-sm-right">
                    <a href="/delete/" <%= file %>"><button class="btn btn-danger" name="complete" value="0">
                        Delete
                      </button>
                    </a>
                  </div>
                  </li>
                  <% }); %>
                </div>

            </div>
            </fieldset>
        </div>
        </ul>
        <% } else { %>
        <p>No files to show</p>
        <% } %>
      </div>
    </div>


      <div id="editor" class="col-6">
        <p>This is the editor content.</p>
      </div>
      <script type="text/javascript" src="ckeditor.js"></script>
      <script>
        CKEDITOR.config.width = 700;
        CKEDITOR.config.height = 300;
        CKEDITOR.replace('editor');
      </script>

      <div class="text-center col-sm-3">
        <h1>Bookmarks</h1>
        <p>For creating bookmarks</p>
      </div>
    </div>


    <div class="row fixed-bottom header" style="height:60px">
      <audio controls="" id="audio" style="width: 100%">
        <source id="songselector" src="./public/uploads/" <%=files[0]%>">
      </audio>
    </div>

  </div>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous">
  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
    integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous">
  </script>

  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
    integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous">
  </script>

</body>

</html>